<div class="auth-page"> 
    <div class="container auth-container" style="padding-left: 25%;">
        
        <div class="card auth-card">
            <div class="card-content">
                <h1 class="card-title text-center">Şifre Sıfırla</h1>
                <p class="text-center auth-subtext">Yeni şifrenizi belirleyin.</p>
                
                <form id="reset-password-form">
                    <div class="form-group">
                        <label for="password" class="form-label">Yeni Şifre</label>
                        <input type="password" id="password" class="form-input" placeholder="En az 6 karakter" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="confirm-password" class="form-label">Şifre Tekrar</label>
                        <input type="password" id="confirm-password" class="form-input" placeholder="Şifrenizi doğrulayın" required>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-full">
                        Şifremi Sıfırla
                    </button>
                </form>

                <div class="auth-footer-link">
                    <p>Şifreni hatırladın mı? <a href="/login">Giriş Yap</a></p>
                </div>

            </div>
        </div>

    </div>
</div>

